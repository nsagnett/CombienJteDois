<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/light_grey</item>
        <item name="backgroundStacked">@color/light_grey</item>
        <item name="backgroundSplit">@color/light_grey</item>
        <item name="titleTextStyle">@style/CustomActionBar.Title</item>
    </style>

    <style name="CustomActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ImageViewGreyBackground">
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/image_border_grey</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>