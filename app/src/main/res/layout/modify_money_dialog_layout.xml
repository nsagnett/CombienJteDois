<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/typeDebtView"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reasonTextView"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/countTextView"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/horizontal_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/addTextView"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:text="@string/increase"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />

        <include layout="@layout/vertical_separator" />

        <TextView
            android:id="@+id/subtractTextView"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/reduce"
            android:background="@drawable/custom_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />

    </LinearLayout>

    <include layout="@layout/horizontal_separator" />

    <TextView
        android:id="@+id/neutralTextView"
        android:textColor="@color/dark_blue"
        android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>